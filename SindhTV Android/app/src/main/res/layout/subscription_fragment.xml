<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/topLayoutLive"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/relativeTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageWatchLive"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/watch_video"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="WATCH LIVE"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageListenLive"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/listen_live"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="LISTEN LIVE"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>