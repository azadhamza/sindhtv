<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnUplaodImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit"
        android:padding="20dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/image"
        android:text="Upload Image"/>

    <Button android:id="@+id/btnUplaodVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit"
        android:padding="20dp"
        android:drawableLeft="@drawable/video"
        android:textSize="19dp"
        android:textStyle="bold"
        android:text="Upload Video"/>

    <Button android:id="@+id/btnUplaodRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit"
        android:padding="20dp"
        android:drawableLeft="@drawable/record"
        android:textSize="19dp"
        android:textStyle="bold"
        android:text="Upload Recording"/>

</LinearLayout>