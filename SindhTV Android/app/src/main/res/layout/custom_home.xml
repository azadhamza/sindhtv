<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/card_view"
        android:orientation="horizontal" >

        <RelativeLayout android:id="@+id/rrr"
            android:layout_width="90dp"
            android:layout_height="60dp" >

            <ImageView
                android:id="@+id/imageVideoAccount1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageIconVideo1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:background="@drawable/video_icon" />

            <TextView
                android:id="@+id/textTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:background="#000000"
                android:padding="2dp"
                android:textSize="13dp"
                android:text="3:00"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <LinearLayout android:id="@+id/lll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/rrr"
            android:layout_marginTop="1dp" >

            <TextView
                android:id="@+id/textVideoAccounnt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Very Nice Video"
                android:textColor="#4185d5"
                android:textSize="13dp"
                android:layout_marginRight="5dp"
                android:maxLines="3"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    android:textColor="#9c7f72"
                    android:textSize="12dp" />
                
                 <TextView
                    android:id="@+id/textVideoBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real Picture"
                    android:textColor="#4185d5"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textVideoLives1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Views  2 days ago"
                android:textColor="#9c7f72"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>
        
     
        
    </RelativeLayout>

</LinearLayout>